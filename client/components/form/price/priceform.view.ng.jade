.main(layout='row')
  span(flex='')
  div(layout='column')
    form.md-whiteframe-z1(ng-submit='save()', name='form', layout-padding='', novalidate='')
      span(flex='', layout="row", layout-align="center center")
        h1 Price Form

      md-input-container.width-90
        label Customer Name
        md-select(ng-model='customerName', name='customerName')
          md-option(ng-repeat='customer in customers') {{customer}}

      md-input-container.width-90
        label Product Id
        md-select(ng-model='productId', name='productId')
          md-option(ng-repeat='product in products') {{product}}

      md-input-container.width-90
        label Type
        md-select(ng-model='type', name='type')
          md-option(ng-repeat='type in types') {{type}}

      md-input-container.width-90(class='md-block')
        label Quantity
        input(ng-model='quantity', name='quantity', type='number', step='1', required='')
        div(ng-messages='form.quantity.$error', role='alert')
          div(ng-message='required') Please enter the quantity

      md-input-container.width-90(class='md-block')
        label Price
        input(ng-model='price', name='price', type='number', step='0.01', required='')
        div(ng-messages='form.price.$error', role='alert')
          div(ng-message='required') Please enter the price

      .main(layout='row')
        span(flex='', layout="row", layout-align="center center")
          input.md-button(type='submit', value='Submit')
    div(layout='row', layout-padding='')
  span(flex='')